{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:49156",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "sonicity",
        "version": "0.0.2"
    },
    "tauri": {
        "allowlist": {
            "fs": {
                "all": true,
                "scope": ["$APPDATA", "$APPDATA/*", "$APPDATA/sonicity/*"]
            },
            "path": {
                "all": true
            },
            "dialog": {
                "all": true
            },
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "protocol": {
                "asset": true,
                "assetScope": ["**"]
            }
        },
        "bundle": {
            "active": true,
            "category": "Music",
            "icon": ["../Sonicity.ico"],
            "identifier": "borg.sonicity",
            "shortDescription": "A simple soundboard app",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "webviewInstallMode": {
                    "type": "embedBootstrapper"
                }
            }
        },
        "security": {
            "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; style-src-elem 'self' fonts.googleapis.com; font-src 'self' fonts.googleapis.com; media-src 'self' asset: https://asset.localhost"
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "label": "main",
                "center": true,
                "fullscreen": true,
                "resizable": true,
                "title": "Sonicity",
                "width": 1920,
                "height": 1080,
                "minHeight": 480,
                "minWidth": 480
            }
        ]
    }
}
