{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "sonicity",
        "version": "0.0.1"
    },
    "tauri": {
        "allowlist": {
            "fs": {
                "all": true,
                "scope": ["$APPDATA", "$APPDATA/*", "$APPDATA/sonicity/*"]
            },
            "path": {
                "all": true
            },
            "dialog": {
                "all": true
            },
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "protocol": {
                "asset": true,
                "assetScope": ["**"]
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "sonicity",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; style-src-elem 'self' fonts.googleapis.com; font-src 'self' fonts.googleapis.com; media-src 'self' asset: https://asset.localhost"
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "Sonicity",
                "width": 800
            }
        ]
    }
}
